
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="body-content padding-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <p class="title padding-bottom "><span class="red">Scenario</span></p>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-align-right">
                    @Html.ActionLink("+ Buat Baru", "Create", "Scenario",new { }, new { @class = "k-button bttn k-primary right margin-right padding-left padding-right" })
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 nogap">
                <select id="action">
                    <option value="0">Action</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 nogap margin-top">
                <div id="grid"></div>
            </div>
        </div>
    </div>
</div>

<input type="text" id="scenarioIdtemp" style="display:none;" />

@section scripts {
    <script type="text/javascript" src="~/Scripts/modules/scenario.js"></script>
}