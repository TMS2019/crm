@model CRMFocus.Domain.ScenarioApprovalDetailView

@using (Html.BeginForm("CreateScenarioHistory", "ScenarioApproval", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ScenarioCode)
    @Html.AntiForgeryToken()
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Approve Skenario Ini ?</h4>
                    </div>
                    <div class="modal-body text-center">
                        <a href="#"><input name="decisison" type="submit" value="Approve" class="k-button bttn approve " /></a>
                        <a href="#"><input type="submit" value="Cancel" class="k-button bttn dark" class="close" data-dismiss="modal" /></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="myRejectModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Reject Skenario Ini ?</h4>
                    </div>
                    <div class="modal-body text-center">
                        <div class="table-responsive margin-bottom">
                            <table class="table">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 nogap">
                                    <div class="text-align-left nogap">
                                        <label>Notes</label>
                                    </div>
                                    <div class="text-align-left">
                                        @Html.TextAreaFor(model => model.ScenarioHistoryView.RejectReason, new { @class = "k-textbox width100", rows = "5" })
                                    </div>
                                </div>
                            </table>
                        </div>
                        <a href="#"><input name="decisison" type="submit" value="Reject" class="k-button bttn k-primary" /></a>
                        <a href="#"><input type="submit" value="Cancel" class="k-button bttn dark" class="close" data-dismiss="modal" /></a>
                    </div>
                </div>
            </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
