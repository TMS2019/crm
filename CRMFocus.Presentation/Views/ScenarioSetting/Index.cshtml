@{
    ViewBag.Title = "ScenarioSetting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="body-content padding-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <p class="title padding-bottom ">Settings / <span class="red">Scenario Settings</span></p>
                </div>
            </div>
            <div id="exTab2">
                <ul class="nav nav-tabs settingtab">
                    <li class="active">
                        <a href="#1" data-toggle="tab" class="padding-left padding-right width100px text-align-center">H1</a>
                    </li>
                    <li>
                        <a href="#2" data-toggle="tab" class="padding-left padding-right width100px text-align-center">H2</a>
                    </li>
                    <li>
                        <a href="#3" data-toggle="tab" class="padding-left padding-right width100px text-align-center">HC3</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 nogap margin-top">
                        <p class="absolute standart-font weight red">Default Scenario</p><hr class="hr" />
                    </div>
                    <div class="tab-pane active" id="1">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 nogap">
                            <div id="gridScenarioSettingh1"></div>
                        </div>
                    </div>
                    <div class="tab-pane" id="2">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 nogap">
                            <div id="gridScenarioSettingh2"></div>
                        </div>
                    </div>
                    <div class="tab-pane" id="3">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 nogap padding-bottom">
                            <div id="gridScenarioSettingh3"></div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 nogap">
                            <p class="absolute standart-font weight red">Custom Scenario</p><hr class="hr" />
                            <div id="gridCustomScenario"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/modules/scenariosetting.js"></script>
}
